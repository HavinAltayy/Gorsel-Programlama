<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Odev2.MainPage"
             Title="Ana Sayfa"
             BackgroundColor="#f4f4f4">

    <ScrollView>
        <VerticalStackLayout
            Padding="30"
            Spacing="20"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <!-- Profil resmi çerçeve içinde, yuvarlatılmış görsel -->
            <Frame CornerRadius="100"
                   HasShadow="True"
                   BorderColor="#cccccc"
                   WidthRequest="200"
                   HeightRequest="200"
                   Padding="0">
                <Image Source="profil.jpg"
                       Aspect="AspectFill"
                       WidthRequest="200"
                       HeightRequest="200" />
            </Frame>

            <!-- Ad Soyad bilgisi -->
            <Label Text="Havin ALTAY"
                   FontSize="30"
                   FontAttributes="Bold"
                   TextColor="#333333"
                   HorizontalOptions="Center" />

            <!-- Alt açıklama bilgisi -->
            <Label Text="Bartın Üniversitesi - Bilgisayar Mühendisliği"
                   FontSize="25"
                   TextColor="Gray"
                   HorizontalOptions="Center" />

            <!-- Ödev bilgisi -->
            <Label Text="ÖDEV-1"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="DarkViolet"
                   HorizontalOptions="Center"/>



        </VerticalStackLayout>
    </ScrollView>
</ContentPage>


